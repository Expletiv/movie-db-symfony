{% extends "base.html.twig" %}

{% block title %}
    Movie Database
{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig' %}

    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        <div class="row justify-content-center">
            {% for movie in movies %}
                <div class="col-auto mb-2 px-1">
                    {% include 'components/movie-preview.html.twig' %}
                </div>
            {% endfor %}
            <div class="filling-empty-space-childs"></div>
            <div class="filling-empty-space-childs"></div>
            <div class="filling-empty-space-childs"></div>
            <div class="filling-empty-space-childs"></div>
        </div>
        <div class="text-center mt-3">
            <div class="btn btn-lg btn-primary" type="button">
                Mehr Laden
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <h3 class="text-center text-danger bg-opacity-75 bg-body-secondary p-2 rounded">
                <i class="bi bi-emoji-frown-fill"></i> Keine Filme gefunden
            </h3>
        </div>
    </div>
{% endblock %}
