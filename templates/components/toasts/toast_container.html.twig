<div class="toast-container position-fixed bottom-0 start-50 translate-middle-x p-3 mb-5"
    {{ stimulus_controller('toast') }}>

    {% for toast in app.flashes('toast') %}
        <div class="toast align-items-center text-bg-{{ toast.style }} border-0" role="alert" aria-live="assertive"
             aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    {{ toast.message|trans|raw }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                        aria-label="Close">
                </button>
            </div>
        </div>
    {% endfor %}

</div>
