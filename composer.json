{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:Expletiv/tmdb-symfony.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:Expletiv/tmdb-api.git"
        }
    ],
    "require": {
        "php": "8.3.*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.2",
        "easycorp/easyadmin-bundle": "^4.10",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.6",
        "nyholm/psr7": "^1.8",
        "php-http/cache-plugin": "^2.0",
        "php-tmdb/symfony": "6.0.*",
        "phpdocumentor/reflection-docblock": "^5.4",
        "phpstan/phpdoc-parser": "^1.29",
        "scienta/doctrine-json-functions": "^6.1",
        "symfony/asset": "7.1.*",
        "symfony/cache": "7.1.*",
        "symfony/config": "7.1.*",
        "symfony/console": "7.1.*",
        "symfony/doctrine-bridge": "7.1.*",
        "symfony/doctrine-messenger": "7.1.*",
        "symfony/dotenv": "7.1.*",
        "symfony/event-dispatcher": "7.1.*",
        "symfony/expression-language": "7.1.*",
        "symfony/flex": "^2.4",
        "symfony/form": "7.1.*",
        "symfony/framework-bundle": "7.1.*",
        "symfony/http-client": "7.1.*",
        "symfony/intl": "7.1.*",
        "symfony/mailer": "7.1.*",
        "symfony/mercure-bundle": "^0.3.9",
        "symfony/messenger": "7.1.*",
        "symfony/mime": "7.1.*",
        "symfony/monolog-bundle": "^3.0",
        "symfony/notifier": "7.1.*",
        "symfony/process": "7.1.*",
        "symfony/property-access": "7.1.*",
        "symfony/property-info": "7.1.*",
        "symfony/rate-limiter": "7.1.*",
        "symfony/runtime": "7.1.*",
        "symfony/security-bundle": "7.1.*",
        "symfony/security-csrf": "7.1.*",
        "symfony/serializer": "7.1.*",
        "symfony/stimulus-bundle": "^2.19",
        "symfony/string": "7.1.*",
        "symfony/translation": "7.1.*",
        "symfony/twig-bundle": "7.1.*",
        "symfony/ux-autocomplete": "^2.18",
        "symfony/ux-lazy-image": "^2.18",
        "symfony/ux-turbo": "^2.19",
        "symfony/validator": "7.1.*",
        "symfony/web-link": "7.1.*",
        "symfony/webpack-encore-bundle": "^2.1",
        "symfony/yaml": "7.1.*",
        "symfonycasts/verify-email-bundle": "^1.17",
        "twig/extra-bundle": "^3.10",
        "twig/intl-extra": "^3.10",
        "twig/string-extra": "^3.10",
        "twig/twig": "^2.12|^3.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "captainhook/captainhook-phar": true,
            "captainhook/hook-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.1.*",
            "docker": true
        }
    },
    "require-dev": {
        "captainhook/captainhook-phar": "^5.23",
        "captainhook/hook-installer": "^1.0",
        "doctrine/doctrine-fixtures-bundle": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.58",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "7.1.*",
        "symfony/css-selector": "7.1.*",
        "symfony/debug-bundle": "7.1.*",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "^7.1",
        "symfony/stopwatch": "7.1.*",
        "symfony/web-profiler-bundle": "7.1.*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "dev:setup": [
            "docker compose --env-file .env.dev --env-file .env.local down",
            "docker compose --env-file .env.dev --env-file .env.local up -d --wait",
            "docker exec -it movie-db-php-1 composer install",
            "docker exec -it movie-db-node-1 npm install --force",
            "@webpack:run",
            "docker exec -it movie-db-php-1 bin/console doctrine:migrations:migrate --no-interaction",
            "@test:setup",
            "@dto:generate",
            "echo 'Visit the application under https://localhost:4443'"
        ],
        "dto:generate": "docker exec -it movie-db-php-1 bin/console app:dto:generate dto/tmdb-openapi.json src/Dto",
        "fix": "@format:php",
        "format:php": "docker exec -it movie-db-php-1 vendor/bin/php-cs-fixer fix",
        "test": [
            "@test:phpcsfixer",
            "@test:phpstan",
            "@test:phpmd",
            "@test:phpunit",
            "@test:translations"
        ],
        "test:coverage": "XDEBUG_MODE=coverage bin/phpunit --coverage-text",
        "test:phpstan": "vendor/bin/phpstan analyse",
        "test:phpcsfixer": "vendor/bin/php-cs-fixer check",
        "test:phpmd": "vendor/bin/phpmd src ansi cleancode",
        "test:phpunit": "bin/phpunit",
        "test:setup": [
            "docker exec -it movie-db-php-1 bin/console --env=test doctrine:database:drop --force",
            "docker exec -it movie-db-php-1 bin/console --env=test doctrine:database:create",
            "docker exec -it movie-db-php-1 bin/console --env=test doctrine:schema:create",
            "docker exec -it movie-db-php-1 bin/console --env=test doctrine:fixtures:load --no-interaction"
        ],
        "test:translations": "bin/console lint:yaml translations",
        "webpack:run": "docker exec -it movie-db-node-1 npm run dev",
        "worker:restart": "docker compose restart php-worker"
    }
}
